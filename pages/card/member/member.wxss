.con{
  padding-top: 10rpx;
  border-top: 1px solid #dcdcdc;
}
.list{
  display: flex;
  align-items: center;
  height: 124rpx;
  border-bottom: 1px solid #dbdbdb;
  margin: 0 0 0 35rpx;
  position: relative;
}
.list .list-fc{
 position: absolute;
 width: 100%;
 height: 100%;
 top: 0;
 left: 0;
 z-index: 1111;
}
.list:nth-last-of-type(1){
  border: none;
}
.list image{
  width: 60rpx;
  height: 60rpx;
  color: #cdcdcd;
  border-radius: 60rpx;
  margin: 0 20rpx;
}
.list .con-txt{
  font-size: 30rpx;
  color: #333333;
}
.list .con-txt .na{
  line-height: 1;
}
.list .con-txt .des{
  margin-top: 18rpx;
  font-size: 24rpx;
  color: #868686;
  line-height: 1;
}
.list .set{
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  right: 30rpx;
  top: 50%;
  margin-top: -17rpx;
  background: url(https://app.fjxzj.com/weimob/bj-ini.png) no-repeat;
  background-size: 100% 100%;
}
.list .add{
  width: 100rpx;
  height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: #0045a2;
  color: #ffffff;
  font-size: 20rpx;
  position: absolute;
  right: 27rpx;
  bottom: 32rpx;
}
.addfamily{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-top: 1px solid #dcdcdc;
  font-size: 30rpx;
}
.tips{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #868686;
}