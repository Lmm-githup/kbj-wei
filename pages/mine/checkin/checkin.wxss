}
.k{
  position: relative;
  height: 100%;
}
.top-bg{
  height: 370rpx;
  background-color: #0045a2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-bg image{
  width: 633rpx;
  height: 267rpx;
}
.top-bg .img-new{
  width: 633rpx;
  height: 267rpx;
	background: url(https://app.fjxzj.com/weimob/qd-in-icon.png) no-repeat;
	background-size: cover;
}
.code{
  position: absolute;
  width: 700rpx;
  height: 455rpx;
  border-radius: 10px;
  background-color: white;
  left: 50%;
  margin-left: -350rpx;
  top: 280rpx;
}
.code .title{
  line-height: 1;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #505050;
}
.days{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:607rpx;
  margin: 0 auto 42rpx auto;
}
.days-con .top{
  width: 66rpx;
  height: 66rpx;
  border-radius: 66rpx;
  margin-bottom: 22rpx;
  background-color: #b6b6b6;
  font-size: 24rpx;
  color: #fff;
  line-height: 66rpx;
  text-align: center;
}
.days-con.action .top{
  background-image: url(https://app.fjxzj.com/weimob/qklw.png);
  background-repeat: no-repeat;
  background-size: 35rpx 34rpx;
  background-position: center center;
}
.days-con.check .top{
  background-image: url(https://app.fjxzj.com/weimob/check-ty.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
  color: white;
}
.days-con.doday .top{
  background-image: url(https://app.fjxzj.com/weimob/check-ty-d.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
  text-indent: 1111px;
}
.days-con .txt{
  text-align: center;
  font-size: 20rpx;
  color: #a6a6a6;
}
.code .dds{
  text-align: center;
  font-size: 26rpx;
  color: #505050;
  line-height: 1;
}
.code .checkin{
  width: 400rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #0045a2;
  margin: 30rpx auto auto auto;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  font-size: 24rpx;
}
.code .checkin.action{
  pointer-events: none;
}
.desc{
  margin-top: 402rpx;
}
.desc .title{
  width: 700rpx;
  margin: auto;
  text-align: center;
  position: relative;
}
.desc .title::after{
  position: absolute;
  content: '';
  width: 100%;
  height: 1px;
  background-color: #ababab;
  left: 0;
  top: 50%;
  z-index: 1;
}
.desc .title .txt{
  display: inline-block;
  padding: 0 36rpx;
  background-color: #eef0f3;
  line-height: 1;
  font-size: 30rpx;
  color: #505050;
  position: relative;
  z-index: 2;
}
.se-desc{
  width: 700rpx;
  margin: 30rpx auto auto auto;
}
.se-desc .p{
  font-size: 28rpx;
  color: #505050;
  margin-bottom: 10rpx;
  line-height: 40rpx;
}