page{
  height: 100%;
  background-color: #eef0f3;
}
.kk{
  padding-top: 28rpx;
  height: 100%;
  box-sizing: border-box;
}
.top{
  margin: 0 26rpx 46rpx 26rpx;
  background-color: #fff;
  padding-top: 74rpx;
  padding-bottom: 40rpx;
}
.top .tt{
  width: 600rpx;
  height: 130rpx;
  margin: auto;
  text-align: center;
  line-height: 130rpx;
  background: -webkit-linear-gradient(left,#f49716,#f9ad0c);
  border-radius: 8rpx;
}
.des-el{
  margin-top: 20rpx;
  text-align: center;
}
.top image{
  width: 470rpx;
  height: 210rpx;
  margin: auto;
  margin-top: 57rpx;
  display: block;
}
.top .des{
  text-align: center;
  color: #505050;
  font-size: 30rpx;
}
.tip{
  margin: 43rpx 50rpx auto 50rpx;
}
.tip .p{
  margin-bottom: 22rpx;
  font-size: 26rpx;
  color: #505050;
}
.btn{
  width: 500rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  color: #ffffff;
  margin: 74rpx auto 77rpx auto;
  background-color: #32429a;
  border-radius: 32rpx;
  font-size: 30rpx;
}
/* 优惠券样式 */
.cn-list{
  width: 654rpx;
  height: 175rpx;
  margin: 0 auto 27rpx auto;
  display: flex;
  position: relative;
  align-items: center;
  border-radius: 8rpx;
  overflow: hidden;
}
.cn-list .img{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}
.cn-list .vv{
  position: relative;
  z-index: 2
}
.cn-list .vv.pr{
  width: 155rpx;
  text-align: center;
  color: #ffffff;
  font-size: 50rpx;
}
.cn-list .vv.pr .type-s{
  font-size: 20rpx;
}
.cn-list .vv.cc{
  margin-left: 22rpx;
}
.cn-list .vv.cc .tt{
  font-size: 26rpx;
  color: #505050;
  line-height: 1;
  margin-bottom: 16rpx;
}
.cn-list .vv.cc .ds{
  font-size: 24rpx;
  color: #5c5c5c;
  margin-bottom: 26rpx;
  line-height: 1;
}
.cn-list .vv.cc .date{
  font-size: 20rpx;
  color: #717171;
}
.cn-list .bt{
  position: absolute;
  z-index: 4;
  width: 120rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background-color: #ffffff;
  border: 1px solid #1e479c;
  color: #1e479c;
  font-size: 22rpx;
  text-align: center;
  line-height: 44rpx;
  box-sizing: border-box;
  right: 18rpx;
  top: 50%;
  margin-top: -22rpx;
}
.p.des-el{
  font-size: 30rpx;
  padding: 30rpx 0;
}