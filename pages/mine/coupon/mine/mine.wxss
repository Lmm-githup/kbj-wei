.cn-mine{
  height: 100%;
  overflow: hidden;
  position: relative;
  background-color: #eef0f3;
}
.cn-mine .header{
  height: 91rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #d5d5d5;
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  z-index: 11;
}
.cn-mine .header .co{
  float: left;
  width: 33.333%;
  text-align: center;
  box-sizing: border-box;
  height: 100%;
}
.cn-mine .header .co .txt{
  display: inline-block;
  height: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #505050;
  line-height: 91rpx;
}
.cn-mine .header .co .txt.action{
  border-bottom: solid 4rpx #0045a2;
  color: #0045a2;
}
.cn-mine .scroll{
  height: 100%;
}
.cn-mine .zw{
  height: 127rpx;
}
.cn-list{
  width: 654rpx;
  height: 175rpx;
  margin: 0 auto 27rpx auto;
  display: flex;
  position: relative;
  align-items: center;
  border-radius: 8rpx;
  overflow: hidden;
}
.cn-list .img{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.cn-list .vv{
  position: relative;
  z-index: 2
}
.cn-list .vv.pr{
  width: 155rpx;
  text-align: center;
  color: #ffffff;
  font-size: 36rpx;
}
.cn-list .vv.pr .type-s{
  font-size: 20rpx;
}
.cn-list .vv.cc{
  margin-left: 22rpx;
}
.cn-list .vv.cc .tt{
  font-size: 26rpx;
  color: #505050;
  line-height: 1;
  margin-bottom: 16rpx;
}
.cn-list .vv.cc .ds{
  font-size: 24rpx;
  color: #5c5c5c;
  margin-bottom: 26rpx;
  line-height: 1;
}
.cn-list .vv.cc .date{
  font-size: 20rpx;
  color: #717171;
}
.cn-list .bt{
  position: absolute;
  z-index: 2;
  width: 120rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background-color: #ffffff;
  border: 1px solid #1e479c;
  color: #1e479c;
  font-size: 22rpx;
  text-align: center;
  line-height: 44rpx;
  box-sizing: border-box;
  right: 18rpx;
  top: 50%;
  margin-top: -22rpx;
}
.scroll{
  display: none;
}
.scroll.action{
  display: block;
}
.tip-txt{
  text-align: center;
  font-size: 26rpx;
  color: #535353;
}
/* footer */
.footer{
  height: 118rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #d8d8d8;
  box-sizing: border-box;
}
.footer .mine,.footer .center{
  text-align: center;
}
.footer .mine{
  margin-left: 129rpx;
}
.footer .center{
  margin-right: 137rpx;
}
.footer .mine image.ac,
.footer .center image.ac{
  display: none;
}
.footer .mine image.noac,
.footer .center image.noac{
  display: block;
}
.footer .mine.action image.ac,
.footer .center.action image.ac{
  display: block;
}
.footer .mine.action image.noac,
.footer .center.action image.noac{
  display: none;
}
.footer image{
  width: 50rpx;
  height: 32rpx;
  margin-bottom: 17rpx;
  margin: 0 auto 17rpx auto;
}
.footer .txt{
  line-height: 1;
  font-size: 22rpx;
  color: #505050;
}
.con{
  background-color: #eef0f3;
}
.con mine{
  height: 100%;
}