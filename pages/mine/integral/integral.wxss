page{
  height: 100%;
}
.integral{
  height: 100%;
}
.wrap{
  width:100%;
  position:fixed;
  top:0;
}
.integral .wrap .top{
  width:100%;
  height: 196rpx;
  background-color: #eef0f3;
  overflow:hidden;
}
.integral .wrap .top .con{
  height: 170rpx;
  width: 680rpx;
  background: -webkit-linear-gradient(top,#fec203, #f69f13);
  background: linear-gradient(top,#fec203, #f69f13);
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top-left-radius: 14rpx;
  border-top-right-radius: 14rpx;
  margin:0 auto;
  margin-top:26rpx;
}
.integral .wrap .top .con .tt{
  font-size: 24rpx;
  margin-bottom: 13rpx;
  line-height: 1;
  text-align: center;
}
.integral .wrap .top .con .bb{
  font-size: 42rpx;
  line-height: 1;
  text-align: center;
}
.integral .wrap .title{
  display: flex;
  background:white;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 1px solid #d8d8d8;
}
.integral .wrap .title .t-txt{
  font-size: 28rpx;
  color: #505050;
  height: 100%;
  box-sizing: border-box;
  line-height: 90rpx;
  position: relative;
}
.integral .wrap .title .t-txt:nth-child(1){
  margin-left: 67rpx;
}
.integral .wrap .title .t-txt:nth-child(3){
  margin-right: 67rpx;
}
.integral .wrap .title .t-txt.action::after{
  position: absolute;
  content: '';
  display: block;
  width: 90rpx;
  height: 4rpx;
  border-radius: 4rpx;
  bottom: 0;
  left: 50%;
  margin-left: -45rpx;
  background-color: #0045a2;
}
.bottom{
  margin-top:286rpx;
}
.integral .list{
  margin: 0 24rpx;
  height: 109rpx;
  border-bottom: 1px solid #e3e3e3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.integral .list .txt{
  margin-left: 3rpx;
  font-size: 24rpx;
  color: #505050;
}
.integral .list .txt .desc{
  line-height: 1;
  font-size: 24rpx;
  color: #505050;
  margin-bottom: 12rpx;
}
.integral .list .txt .date{
  font-size: 20rpx;
  color: #868686;
}
.integral .list .num{
  margin-right: 17rpx;
  font-size: 30rpx;
  color: #d81e06;
}
.ts{
  font-size: 27rpx;
  text-align: center;
  color: #505050;
  width:100%;
  line-height:100rpx;
  background:#eee;
}
