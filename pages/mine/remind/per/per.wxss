page{
  background-color: #eef0f3;
}
.tip{
  padding: 0 20rpx;
  background-color: #f0ddc4;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 28rpx;
}
.bc{
  background-color: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.bc1{
  height: 130rpx;
}
.bctip{
  font-size: 28rpx;
  color: #333333;
  margin-left: 22rpx;
}
.bc1 .bctip{
  margin-right: 57rpx;
}
.bc1 .li{
  font-size: 28rpx;
  color: #333333;
}
.bc1 .ks{
  margin: 0 35rpx;
  border-bottom: 1px solid #505050;
}
.bc1 .ks .add,.bc1 .ks .mi{
  width: 22rpx;
  height: 22rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: inline-block;
}
.bc1 .ks .add{
  background-image: url(https://app.fjxzj.com/weimob/add-icon.png)
}
.bc1 .ks .mi{
  background-image: url(https://app.fjxzj.com/weimob/mi-icon.png)
}
.bc1 .ks .day{
  display: inline-block;
  margin: 0 13rpx;
  font-size: 30rpx;
  line-height: 1;
  color: #f49716;
}
.bc2{
  height: 88rpx;
  position: relative;
}
.bc2 .time{
  position: absolute;
  width: 130rpx;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 21rpx;
  right: 30rpx;
  top: 50%;
  margin-top: -21rpx;
  background-color: #f49716;
}
.bc2 .s{
  font-size: 26rpx;
  color: #4e4e4e;
  margin-left: 22rpx;
}
.bc.bc2.bc3{
  margin-bottom: 0;
}
.bc.bc2.bc3.one{
  border-bottom: 1px solid #eef0f3;
}
.bc.bc2.bc3 .time{
  width: 30rpx;
  height: 33rpx;
  right: 20rpx;
  margin-top: -16.5rpx;
  background: url(https://app.fjxzj.com/weimob/time-cion.png) no-repeat;
  background-size: 100% 100%;
  border-radius: 0;
}

.btn{
  width: 680rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  background-color: #0045a2;
  font-size: 28rpx;
  margin-top: 117rpx;
  margin: 400rpx auto auto auto;
  border-radius: 8rpx;
}